params {
    //Variables
    accessions = "$projectDir/SraRunTable_12wkPFC.csv"
        //for modularity in getting future annotations and reference genomes
    gencode_species = "mouse" 
    gencode_version = "M38"
    genome_assembly = "GRCm39"
    gencode_gtf_url = "https://ftp.ebi.ac.uk/pub/databases/gencode/Gencode_${params.gencode_species}/release_${params.gencode_version}/gencode.v${params.gencode_version}.primary_assembly.annotation.gtf.gz"
    gencode_ref_url = "https://ftp.ebi.ac.uk/pub/databases/gencode/Gencode_${params.gencode_species}/release_${params.gencode_version}/${params.genome_assembly}.primary_assembly.genome.fa.gz"

    //Directories
    outdir = "$projectDir/results"
}

env {
    ncbi_api_key = "2b3c15225281ec5f6564bd148659e2a3a008"
}

profiles {
    conda {
        conda.enabled = true
    }
    singularity {
        singularity.enabled = true
        singularity.autoMounts = true
    }
    cluster {
        process {
                executor = 'sge'
                clusterOptions = '-P bf528'
                penv = 'omp'

                withLabel: process_single {
                    cpus = 1
                }

                withLabel: process_low {
                    cpus = 4

                }
                withLabel: process_medium {
                    cpus = 8
                }
                
                withLabel: process_high {
                    cpus = 16
                    // clusterOptions = "-P bf528 -l mem_per_core=8G"
                }
        }
    }

    local {
        process.executor = 'local'
    }
}

//Change the queueSize to enable more parallel jobs (remember the SCC is a shared resource)
executor {
    $sge {
        queueSize = 8
    }
    $local {
        cpus = 1
    }
}

//Other CLI flags
resume = true